<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t("common.edit_password")%></div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name, by: :pwd), html: { method: :put }) do |f| %>
          <%= render "shared/error_messages", target: resource if params[:by] == "pwd" %>
          <input type="hidden" name="by" value="pwd" />
          <%= f.input :current_password %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= f.submit t("common.edit_password"), class: "btn btn-success", 'data-disable-with' => t("common.saving") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $.material.init();
  });
</script>

